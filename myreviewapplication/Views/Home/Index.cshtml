@{
    ViewData["Title"] = "Home Page";
}
@model  List<myreviewapplication.Models.Product>

    

    <style>
    *{
      
        color:white;
       
    }
        .firstpage{
         box-sizing:border-box; 
         width:100% ; 
         height:95vh ; 
         background:skyblue;
       position:relative ;     
        }
        .cardscontainer{
         display:flex;
         height: auto;
         
          justify-content:space-evenly ;
          flex-wrap:wrap ;
        
        }
    

    .page2 {
        background: black;
         display:block;
        align-items:center;
        min-height:100vh;
        text-align:center;
        flex-direction: column;
        padding-top:20px;
    }

   
    .mycard{
        width:400px; 
        height:400px; 
        border-radius:20px;
        border:1px solid yellow;
        margin:10px;
        overflow: hidden;
    position:relative;
    }
   .cardimg{
       width:100%;
        height: 50%;
        overflow: hidden;
 
   
   }
 
   .cardimg img{
        max-height:100% ; 
        width:100% ; 
   
        object-fit:cover;
            transition: 0.2s ease-in-out;
   }
     
    .image:hover {
         max-height:105% ; 
         width:105% ;


    }
  

 .description{
 }
 .firstpage img{
     width:100% ;
     height:100% ; 
     position:absolute;
     top: 0 ; 
     right:0 ; 
     left:0 ; 
     bottom: 0 ;
     object-fit:cover;
 }

 .description {
     position:absolute;
     top:50%;
     left:50%;
     width:100%;
    transform:translate(-50%,-50%);
  
    font-weight:bolder;
        font-family: 'Alfa Slab One', cursive;
        font-family: 'Archivo Black', sans-serif;
        font-family: 'Asap Condensed', sans-serif;
        font-family: 'Poppins', sans-serif;
 }
 .description h1{
         font-size:60px;
        
         text-align:center;
      
 }  
 
.page2 h2{
     margin-bottom:40px;
}

.image::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: black;
        opacity: 0.5; /* Adjust the opacity to make it more or less black */
    }
        </style>

<div class="firstpage">
   <div class="image">
        <img   src="https://c4.wallpaperflare.com/wallpaper/234/543/684/food-pizza-wallpaper-preview.jpg" />
   </div>
    <div class="description">

        <h1>
      "Slice of Heaven: Crafted Pizzas <br /> for Every Craving"
     
        </h1>
    </div>
   
 

</div>


        <div class="page2">

            <h2>Our Products</h2>



    <div class="cardscontainer">

        @foreach (var item in Model)
        {
            <div class="mycard">

                <div class="cardimg">
                    <img class="image" src="@item.ImageUrl" class="img-fluid" />
                </div>
                <div class="details">
                   <div>
                        <h4>Name: @item.Name</h4>
                        <h5>Price: &#8377; @item.Price</h5>
                        <p> Rating: @item.Rating <span style="font-size:150%;color:yellow;">&starf;</span> </p>
                        <a class="btn btn-primary" asp-action="ProductDetail" asp-controller="ProductDetails" asp-route-id="@item.Id">Check Out</a>

                   </div>
                </div>
               
            </div>
        }

    </div>
        </div>