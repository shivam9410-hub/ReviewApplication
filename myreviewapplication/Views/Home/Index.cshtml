@{
    ViewData["Title"] = "Home Page";
}
@model  List<myreviewapplication.Models.Product>



    <style>
        .firstpage{
         box-sizing:border-box; 
         width:100% ; 
         height:100vh ; 
         background:skyblue;
        
        }
    </style>

<div class="firstpage">
 
  <div class="description">


  </div>

  <div></div>

   <a class="btn btn-primary" asp-action="AddProduct" asp-controller="ProductDetails">Add New</a>
 

</div>


<div class="container">
    @foreach (var item in Model)
    {
        <div class="mycard">
            <div>
                <img src="@item.ImageUrl" class="img-fluid" />
            </div>
            <div class="details">
                <h4>@item.Name</h4>
                <h5>@item.Price</h5>
                <div>
                    <p>@item.Description</p>
                </div>

            </div>
            <a class="btn btn-primary" asp-action="ProductDetail" asp-controller="ProductDetails" asp-route-id="@item.Id">Review</a>
        </div>
    }

</div>