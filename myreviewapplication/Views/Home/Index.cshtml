@{
    ViewData["Title"] = "Home Page";
}
@model  List<myreviewapplication.Models.Product>





<div class="text-center container-fluid d-flex">
 
   
      @foreach(var item  in Model){
        <div class="card" >
            <div >
                <img src="@item.ImageUrl" class="img-fluid" />
            </div>
          <div class="details">
                <h4>@item.Name</h4>
                <h5>@item.Price</h5>
               <div>
                   <p>@item.Description</p>
                   </div>

          </div>
          <a class="btn btn-primary" asp-action="ProductDetail" asp-controller="ProductDetails" asp-route-id="@item.Id">Review</a>
        </div>
    }

</div>
